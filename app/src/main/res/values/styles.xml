<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommonTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WaitListTextStyle">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SpinnerDivideStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">#80000000</item> <!-- divider 색 -->
        <item name="android:dividerHeight">1dp</item> <!-- divider 높이 -->
    </style>

    <style name="SpinnerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:dropDownListViewStyle">@style/SpinnerDivideStyle</item>
    </style>
</resources>